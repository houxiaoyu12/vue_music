.m-header
    position: relative
    height: 44px
    text-align: center
    color: $color-theme
    font-size: 0
    border-bottom: 1px solid $color-theme
    .icon
        display: inline-block
        vertical-align: top
        margin-top: 6px
        margin-right: 9px
        height: 32px
        width: 30px
        bg-image('../../../static/img/logo')
        background-size: 100%
    .text
        display: inline-block
        vertical-align: top
        line-height: 44px
        font-size: $font-size-large
